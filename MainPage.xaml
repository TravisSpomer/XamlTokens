<Page
	x:Class="XamlTokens.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:XamlTokens"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Page.Resources>
		<ResourceDictionary>
			<!-- Shared design tokens -->
			<CornerRadius x:Key="CornerRadius">4</CornerRadius>
			<Thickness x:Key="ButtonPadding">25</Thickness>
			<Thickness x:Key="ButtonBorderThemeThickness">1</Thickness>
			<x:String x:Key="ContentControlThemeFontFamily">Calibri</x:String>
			<x:Double x:Key="ContentControlThemeFontWeight">700</x:Double>
			<x:Double x:Key="ControlContentThemeFontSize">24</x:Double>

			<!-- Neutral style design tokens-->
			<!-- How to find the names of brushes: https://github.com/microsoft/microsoft-ui-xaml/blob/master/dev/CommonStyles/Button_themeresources.xaml -->
			<SolidColorBrush x:Key="ButtonForeground">Yellow</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonBackground">Red</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonBorderBrush">Yellow</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonForegroundPointerOver">Cyan</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonBackgroundPointerOver">Blue</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonBorderBrushPointerOver">Cyan</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonForegroundPressed">Lime</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonBackgroundPressed">Green</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonBorderBrushPressed">Lime</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonForegroundDisabled">Gray</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonBackgroundDisabled">Silver</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonBorderBrushDisabled">Gray</SolidColorBrush>

			<!-- Accent style design tokens -->
			<SolidColorBrush x:Key="AccentButtonForeground">Cyan</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonBackground">Blue</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonBorderBrush">Cyan</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonForegroundPointerOver">Yellow</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonBackgroundPointerOver">Red</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonBorderBrushPointerOver">Yellow</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonForegroundPressed">Lime</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonBackgroundPressed">Green</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonBorderBrushPressed">Lime</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonForegroundDisabled">Gray</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonBackgroundDisabled">Silver</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonBorderBrushDisabled">Gray</SolidColorBrush>
			
			<!--
				Most properties on Button come from design tokens already, but a few don't (or are done so in a way that can't be overridden),
				so make them work here.
			-->
			<Style TargetType="Button">
				<Setter Property="BackgroundSizing" Value="InnerBorderEdge" />
				<Setter Property="CornerRadius" Value="{ThemeResource CornerRadius}" />
				<Setter Property="FontWeight" Value="{ThemeResource ContentControlThemeFontWeight}" />
				<Setter Property="Padding" Value="{ThemeResource ButtonPadding}" />
			</Style>

			<Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
				<Setter Property="BackgroundSizing" Value="InnerBorderEdge" />
				<Setter Property="CornerRadius" Value="{ThemeResource CornerRadius}" />
				<Setter Property="FontWeight" Value="{ThemeResource ContentControlThemeFontWeight}" />
				<Setter Property="Padding" Value="{ThemeResource ButtonPadding}" />
			</Style>

			<!-- Outline style design tokens -->

			<SolidColorBrush x:Key="OutlineButtonForeground">Black</SolidColorBrush>
			<SolidColorBrush x:Key="OutlineButtonBackground">Transparent</SolidColorBrush>
			<SolidColorBrush x:Key="OutlineButtonBorderBrush">Gray</SolidColorBrush>
			<SolidColorBrush x:Key="OutlineButtonForegroundPointerOver">Magenta</SolidColorBrush>
			<SolidColorBrush x:Key="OutlineButtonBackgroundPointerOver">#22000000</SolidColorBrush>
			<SolidColorBrush x:Key="OutlineButtonBorderBrushPointerOver">Magenta</SolidColorBrush>
			<SolidColorBrush x:Key="OutlineButtonForegroundPressed">Lime</SolidColorBrush>
			<SolidColorBrush x:Key="OutlineButtonBackgroundPressed">Green</SolidColorBrush>
			<SolidColorBrush x:Key="OutlineButtonBorderBrushPressed">Lime</SolidColorBrush>
			<SolidColorBrush x:Key="OutlineButtonForegroundDisabled">Gray</SolidColorBrush>
			<SolidColorBrush x:Key="OutlineButtonBackgroundDisabled">#11000000</SolidColorBrush>
			<SolidColorBrush x:Key="OutlineButtonBorderBrushDisabled">Gray</SolidColorBrush>
			
			<!-- The platform doesn't include an outline button style, so create one. -->

			<Style x:Key="OutlineButtonStyle" TargetType="Button">
				<Setter Property="Background" Value="{ThemeResource OutlineButtonBackground}" />
				<Setter Property="BackgroundSizing" Value="OuterBorderEdge" />
				<Setter Property="Foreground" Value="{ThemeResource OutlineButtonForeground}" />
				<Setter Property="BorderBrush" Value="{ThemeResource OutlineButtonBorderBrush}" />
				<Setter Property="BorderThickness" Value="{ThemeResource ButtonBorderThemeThickness}" />
				<Setter Property="Padding" Value="{ThemeResource ButtonPadding}" />
				<Setter Property="HorizontalAlignment" Value="Left" />
				<Setter Property="VerticalAlignment" Value="Center" />
				<Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}" />
				<Setter Property="FontWeight" Value="{ThemeResource ContentControlThemeFontWeight}" />
				<Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}" />
				<Setter Property="UseSystemFocusVisuals" Value="{StaticResource UseSystemFocusVisuals}" />
				<Setter Property="FocusVisualMargin" Value="-3" />
				<Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="Button">
							<ContentPresenter
								x:Name="ContentPresenter"
								Background="{TemplateBinding Background}"
								BackgroundSizing="{TemplateBinding BackgroundSizing}"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}"
								Content="{TemplateBinding Content}"
								ContentTemplate="{TemplateBinding ContentTemplate}"
								ContentTransitions="{TemplateBinding ContentTransitions}"
								CornerRadius="{TemplateBinding CornerRadius}"
								Padding="{TemplateBinding Padding}"
								HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
								VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
								AutomationProperties.AccessibilityView="Raw">
								<VisualStateManager.VisualStateGroups>
									<VisualStateGroup x:Name="CommonStates">
										<VisualState x:Name="Normal">
											<Storyboard>
												<PointerUpThemeAnimation Storyboard.TargetName="ContentPresenter" />
											</Storyboard>
										</VisualState>
										<VisualState x:Name="PointerOver">
											<Storyboard>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource OutlineButtonBackgroundPointerOver}" />
												</ObjectAnimationUsingKeyFrames>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource OutlineButtonBorderBrushPointerOver}" />
												</ObjectAnimationUsingKeyFrames>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource OutlineButtonForegroundPointerOver}" />
												</ObjectAnimationUsingKeyFrames>
												<PointerUpThemeAnimation Storyboard.TargetName="ContentPresenter" />
											</Storyboard>
										</VisualState>
										<VisualState x:Name="Pressed">
											<Storyboard>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource OutlineButtonBackgroundPressed}" />
												</ObjectAnimationUsingKeyFrames>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource OutlineButtonBorderBrushPressed}" />
												</ObjectAnimationUsingKeyFrames>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource OutlineButtonForegroundPressed}" />
												</ObjectAnimationUsingKeyFrames>
												<PointerDownThemeAnimation Storyboard.TargetName="ContentPresenter" />
											</Storyboard>
										</VisualState>
										<VisualState x:Name="Disabled">
											<Storyboard>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource OutlineButtonBackgroundDisabled}" />
												</ObjectAnimationUsingKeyFrames>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource OutlineButtonBorderBrushDisabled}" />
												</ObjectAnimationUsingKeyFrames>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource OutlineButtonForegroundDisabled}" />
												</ObjectAnimationUsingKeyFrames>
											</Storyboard>
										</VisualState>
									</VisualStateGroup>
								</VisualStateManager.VisualStateGroups>
							</ContentPresenter>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>

			<!-- Transparent style design tokens -->

			<SolidColorBrush x:Key="TransparentButtonForeground">Black</SolidColorBrush>
			<SolidColorBrush x:Key="TransparentButtonBackground">Transparent</SolidColorBrush>
			<SolidColorBrush x:Key="TransparentButtonBorderBrush">Transparent</SolidColorBrush>
			<SolidColorBrush x:Key="TransparentButtonForegroundPointerOver">Magenta</SolidColorBrush>
			<SolidColorBrush x:Key="TransparentButtonBackgroundPointerOver">#22000000</SolidColorBrush>
			<SolidColorBrush x:Key="TransparentButtonBorderBrushPointerOver">Transparent</SolidColorBrush>
			<SolidColorBrush x:Key="TransparentButtonForegroundPressed">Lime</SolidColorBrush>
			<SolidColorBrush x:Key="TransparentButtonBackgroundPressed">Green</SolidColorBrush>
			<SolidColorBrush x:Key="TransparentButtonBorderBrushPressed">Transparent</SolidColorBrush>
			<SolidColorBrush x:Key="TransparentButtonForegroundDisabled">Gray</SolidColorBrush>
			<SolidColorBrush x:Key="TransparentButtonBackgroundDisabled">Transparent</SolidColorBrush>
			<SolidColorBrush x:Key="TransparentButtonBorderBrushDisabled">Transparent</SolidColorBrush>

			<!-- The platform doesn't include a transparent button style, so create one. -->

			<Style x:Key="TransparentButtonStyle" TargetType="Button">
				<Setter Property="Background" Value="{ThemeResource TransparentButtonBackground}" />
				<Setter Property="BackgroundSizing" Value="OuterBorderEdge" />
				<Setter Property="Foreground" Value="{ThemeResource TransparentButtonForeground}" />
				<Setter Property="BorderBrush" Value="{ThemeResource TransparentButtonBorderBrush}" />
				<Setter Property="BorderThickness" Value="{ThemeResource ButtonBorderThemeThickness}" />
				<Setter Property="Padding" Value="{ThemeResource ButtonPadding}" />
				<Setter Property="HorizontalAlignment" Value="Left" />
				<Setter Property="VerticalAlignment" Value="Center" />
				<Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}" />
				<Setter Property="FontWeight" Value="{ThemeResource ContentControlThemeFontWeight}" />
				<Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}" />
				<Setter Property="UseSystemFocusVisuals" Value="{StaticResource UseSystemFocusVisuals}" />
				<Setter Property="FocusVisualMargin" Value="-3" />
				<Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="Button">
							<ContentPresenter
								x:Name="ContentPresenter"
								Background="{TemplateBinding Background}"
								BackgroundSizing="{TemplateBinding BackgroundSizing}"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}"
								Content="{TemplateBinding Content}"
								ContentTemplate="{TemplateBinding ContentTemplate}"
								ContentTransitions="{TemplateBinding ContentTransitions}"
								CornerRadius="{TemplateBinding CornerRadius}"
								Padding="{TemplateBinding Padding}"
								HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
								VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
								AutomationProperties.AccessibilityView="Raw">
								<VisualStateManager.VisualStateGroups>
									<VisualStateGroup x:Name="CommonStates">
										<VisualState x:Name="Normal">
											<Storyboard>
												<PointerUpThemeAnimation Storyboard.TargetName="ContentPresenter" />
											</Storyboard>
										</VisualState>
										<VisualState x:Name="PointerOver">
											<Storyboard>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TransparentButtonBackgroundPointerOver}" />
												</ObjectAnimationUsingKeyFrames>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TransparentButtonBorderBrushPointerOver}" />
												</ObjectAnimationUsingKeyFrames>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TransparentButtonForegroundPointerOver}" />
												</ObjectAnimationUsingKeyFrames>
												<PointerUpThemeAnimation Storyboard.TargetName="ContentPresenter" />
											</Storyboard>
										</VisualState>
										<VisualState x:Name="Pressed">
											<Storyboard>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TransparentButtonBackgroundPressed}" />
												</ObjectAnimationUsingKeyFrames>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TransparentButtonBorderBrushPressed}" />
												</ObjectAnimationUsingKeyFrames>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TransparentButtonForegroundPressed}" />
												</ObjectAnimationUsingKeyFrames>
												<PointerDownThemeAnimation Storyboard.TargetName="ContentPresenter" />
											</Storyboard>
										</VisualState>
										<VisualState x:Name="Disabled">
											<Storyboard>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TransparentButtonBackgroundDisabled}" />
												</ObjectAnimationUsingKeyFrames>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TransparentButtonBorderBrushDisabled}" />
												</ObjectAnimationUsingKeyFrames>
												<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
													<DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TransparentButtonForegroundDisabled}" />
												</ObjectAnimationUsingKeyFrames>
											</Storyboard>
										</VisualState>
									</VisualStateGroup>
								</VisualStateManager.VisualStateGroups>
							</ContentPresenter>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>

		</ResourceDictionary>
	</Page.Resources>

	<Grid Margin="60" HorizontalAlignment="Left" VerticalAlignment="Top" ColumnSpacing="20" RowSpacing="20">
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Button Grid.Row="0" Content="Neutral button" />
		<Button Grid.Row="1" Content="Accent button" Style="{StaticResource AccentButtonStyle}" />
		<Button Grid.Row="2" Content="Outline button" Style="{StaticResource OutlineButtonStyle}" />
		<Button Grid.Row="3" Content="Transparent button" Style="{StaticResource TransparentButtonStyle}" />
		<Button Grid.Column="1" Grid.Row="0" Content="Neutral button" IsEnabled="False" />
		<Button Grid.Column="1" Grid.Row="1" Content="Accent button" Style="{StaticResource AccentButtonStyle}" IsEnabled="False" />
		<Button Grid.Column="1" Grid.Row="2" Content="Outline button" Style="{StaticResource OutlineButtonStyle}" IsEnabled="False" />
		<Button Grid.Column="1" Grid.Row="3" Content="Transparent button" Style="{StaticResource TransparentButtonStyle}" IsEnabled="False" />
	</Grid>

</Page>
