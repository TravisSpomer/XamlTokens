<Page
	x:Class="XamlTokens.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	mc:Ignorable="d"
	d:DesignWidth="960" d:DesignHeight="550"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Page.Resources>
		<ResourceDictionary>
			<ThemeShadow x:Name="SharedShadow" />
		</ResourceDictionary>
	</Page.Resources>

	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="320" />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid x:Name="TitleBar" Background="{StaticResource GlobalColorAccent100}" Grid.ColumnSpan="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="32" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<TextBlock Text="Home" Grid.Row="1" Margin="20,0,20,0" VerticalAlignment="Center" HorizontalAlignment="Left" IsHitTestVisible="False" Style="{StaticResource HeaderTextBlockStyle}" Foreground="{StaticResource TempAccentTextFillColorRest}" />
			<AutoSuggestBox Grid.Column="1" Grid.Row="1" Width="280" VerticalAlignment="Center" QueryIcon="Find" PlaceholderText="Search" IsTabStop="False" />
			<PersonPicture Grid.Column="2" Grid.Row="1" Width="32" Height="32" Margin="8" HorizontalAlignment="Center" VerticalAlignment="Center" PreferSmallImage="True" Initials="FUI" />
		</Grid>
		<Rectangle x:Name="ShadowBackground" Grid.Column="1" Grid.Row="1" />
		<Rectangle x:Name="NavPane" Grid.Row="1" Fill="{StaticResource GlobalColorNeutral20}" Translation="0, 0, 16" Shadow="{StaticResource SharedShadow}" />
		<StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
			<Image Source="Assets\Cloud.svg" Stretch="UniformToFill" Width="204" Height="164" Opacity="0.3" />
			<TextBlock Margin="0, 40, 0, 40" Style="{StaticResource SubheaderTextBlockStyle}" HorizontalAlignment="Center" HorizontalTextAlignment="Center" Foreground="{StaticResource GlobalColorAccent120}">Some handy text here</TextBlock>
			<Button Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Center" TabIndex="0">Accent</Button>
		</StackPanel>
	</Grid>

</Page>
