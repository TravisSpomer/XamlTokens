<Page
	x:Class="XamlTokens.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:XamlTokens"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Page.Resources>
		<ResourceDictionary>
			<!-- Shared design tokens -->
			<CornerRadius x:Key="CornerRadius">4</CornerRadius>
			<Thickness x:Key="ButtonPadding">25</Thickness>
			<Thickness x:Key="ButtonBorderThemeThickness">1</Thickness>
			<x:String x:Key="ContentControlThemeFontFamily">Calibri</x:String>
			<x:Double x:Key="ContentControlThemeFontWeight">700</x:Double>
			<x:Double x:Key="ControlContentThemeFontSize">24</x:Double>

			<!-- Neutral style design tokens-->
			<!-- How to find the names of brushes: https://github.com/microsoft/microsoft-ui-xaml/blob/master/dev/CommonStyles/Button_themeresources.xaml -->
			<SolidColorBrush x:Key="ButtonForeground">Yellow</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonBackground">Red</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonBorderBrush">Yellow</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonForegroundPointerOver">Cyan</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonBackgroundPointerOver">Blue</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonBorderBrushPointerOver">Cyan</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonForegroundPressed">Lime</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonBackgroundPressed">Green</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonBorderBrushPressed">Lime</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonForegroundDisabled">Gray</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonBackgroundDisabled">Silver</SolidColorBrush>
			<SolidColorBrush x:Key="ButtonBorderBrushDisabled">Gray</SolidColorBrush>

			<!-- Accent style design tokens -->
			<SolidColorBrush x:Key="AccentButtonForeground">Cyan</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonBackground">Blue</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonBorderBrush">Cyan</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonForegroundPointerOver">Yellow</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonBackgroundPointerOver">Red</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonBorderBrushPointerOver">Yellow</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonForegroundPressed">Lime</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonBackgroundPressed">Green</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonBorderBrushPressed">Lime</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonForegroundDisabled">Gray</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonBackgroundDisabled">Silver</SolidColorBrush>
			<SolidColorBrush x:Key="AccentButtonBorderBrushDisabled">Gray</SolidColorBrush>
			
			<!--
				Most properties on Button come from design tokens already, but a few don't (or are done so in a way that can't be overridden),
				so make them work here.
			-->
			<Style TargetType="Button">
				<Setter Property="BackgroundSizing" Value="InnerBorderEdge" />
				<Setter Property="CornerRadius" Value="{ThemeResource CornerRadius}" />
				<Setter Property="FontWeight" Value="{ThemeResource ContentControlThemeFontWeight}" />
				<Setter Property="Padding" Value="{ThemeResource ButtonPadding}" />
			</Style>

			<Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
				<Setter Property="BackgroundSizing" Value="InnerBorderEdge" />
				<Setter Property="CornerRadius" Value="{ThemeResource CornerRadius}" />
				<Setter Property="FontWeight" Value="{ThemeResource ContentControlThemeFontWeight}" />
				<Setter Property="Padding" Value="{ThemeResource ButtonPadding}" />
			</Style>

			<!-- TODO: The platform doesn't define an outline or transparent button style, so we'll have to create those ourselves. -->
			
		</ResourceDictionary>
	</Page.Resources>

	<Grid>
		<Button Margin="60,60,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Neutral button" />
		<Button Margin="60,160,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Accent button" Style="{StaticResource AccentButtonStyle}" />
		<Button Margin="60,260,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Content="TODO: Outline button" IsEnabled="False" />
		<Button Margin="60,360,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Content="TODO: Transparent button" IsEnabled="False" />
	</Grid>

</Page>
